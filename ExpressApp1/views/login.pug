doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css')
  title #{title}
  style
    include ../public/stylesheets/login.css


  
body.container
  .row.justify-content-center.align-items-center.inner-row
    .col-lg-5.col-md-7
      .form-box.login-form.p-5
        .form-title
          p #{msg}
          h2.fw-bold.mb-3 Login
        //- need whats below for posting info to router page
        form(action='/login' method='post')
          .form-floating.mb-3
            input.form-control.form-control-sm(id='email' name= 'email' type='email' placeholder='Email')
            label(for='email') Email
          .form-floating.mb-3
            input.form-control.form-control-sm(id='password' name='password' type='password' placeholder='Password')
            label(for='password') Password
          .mt-3
            //- this is how you send the info to the roter page
            input.btn.btn-light.primaryBg(type= 'submit' value='Login')           
        .mt-3
          span Don't have account? 
          a.button(href='./signup') Sign Up

        .mt-3
          ul
            each user in users
              li= `${user.id}: ${user.email} ${user.password_hash}`

